<body background="@Model.Cab.CH_RUTA_BORRADOR" style="background-repeat: no-repeat; background-position: 90% -22%;;">





    <div style="height: auto;" back>


        <CENTER class="css-cabecera">  <b>ORDEN DE COMPRA  </b></CENTER><br>

        <CENTER class="css-cabecera">N°@Model.Cab.I_ORDEM_COMPRA</CENTER>



        <div class="css-fecha">
            <b>FECHA EMISIÓN  </b>   :  @Model.Cab.DT_FECHA_EMISION
        </div>
        <div class="css-fecha">
            <b>FECHA ENTREGA  </b>   :  @Model.Cab.DT_FECHA_ENTREGA_PREV
        </div>

        <div>
            <table>
                <tr>
                    <th align="left" class="css-CabezeraDetalle">PROVEEDOR</th>
                    <th align="left" class="css-CabezeraDetalle">:  @Model.Cab.CH_PROVEEDOR</th>
                </tr>
                <tr>
                    <th align="left" class="css-CabezeraDetalle">RUC</th>
                    <th align="left" class="css-CabezeraDetalle">:  @Model.Cab.CH_RUC</th>
                </tr>
                <tr>
                    <th align="left" class="css-CabezeraDetalle">DIRECCIÓN</th>
                    <th align="left" class="css-CabezeraDetalle">:  @Model.Cab.CH_DIRECCION</th>
                </tr>
                <tr>
                    <th align="left" class="css-CabezeraDetalle">CONTACTO</th>
                    <th align="left" class="css-CabezeraDetalle">:  @Model.Cab.CH_CONTACTO</th>
                </tr>
                <tr>
                    <th align="left" class="css-CabezeraDetalle">MONEDA</th>
                    <th align="left" class="css-CabezeraDetalle">:  @Model.Cab.CH_MONEDA</th>
                </tr>
                <tr>
                    <th align="left" class="css-CabezeraDetalle">FORMA DE PAGO   </th>
                    <th align="left" class="css-CabezeraDetalle">:  @Model.Cab.CH_CONDICION_PAGO</th>
                </tr>
                <tr>
                    <th align="left" class="css-CabezeraDetalle">ORDEN DE COMPRA DE REFERENCIA   </th>
                    <th align="left" class="css-CabezeraDetalle">:  @Model.Cab.I_OC_REFERENCIA  </th>
                </tr>


            </table>

        </div>
        <br />

        <table style="width:100%" border=1 cellspacing=0 cellpadding=2 bordercolor="FFFFFF">
            <tr>
                <th align="left" class="line-detalle">Item</th>
                <th align="left" class="line-detalle">UM</th>
                <th align="left" class="line-detalle">CODIGO TSC</th>
                <th align="left" class="line-detalle">DESCRIPCION</th>
                <th align="left" class="line-detalle">CODIGO PROVEEDOR</th>
                <th align="left" class="line-detalle">ITEMS OC REFERENCIA</th>
                <th align="left" class="line-detalle">CANTIDAD</th>
                <th align="left" class="line-detalle">MAXIMA</th>
                <th align="left" class="line-detalle">P.UNIT</th>
                <th align="left" class="line-detalle">SUB TOTAL</th>

            </tr>

            @foreach (var item in Model.Det)
            {
        <tr>
            <th align="left" class="line-detalle-Cantidades">@item.I_Item</th>
            <th align="left" class="line-detalle-Cantidades">@item.CH_MEDIDA</th>
            <th align="left" class="line-detalle-Cantidades">@item.CH_CODIGO_TSC</th>
            <th align="left" class="line-detalle-Cantidades" style="text-align:left">@item.CH_DESCRIPCION</th>
            <th align="left" class="line-detalle-Cantidades">@item.CH_CODIGO_PROVEEDOR</th>
            <th align="left" class="line-detalle-Cantidades">@item.I_OC_REFERENCIA_SEQ</th>
            <th align="left" class="line-detalle-Cantidades">@item.I_CANT</th>
            <th align="left" class="line-detalle-Cantidades">@item.I_MAXIMO</th>
            <th align="left" class="line-detalle-Cantidades">@item.I_P_UNIT</th>
            <th align="left" class="line-detalle-Cantidades">@item.I_SUB_TOTAL</th>
        </tr>
            }
           
                        <tr>
                            <th align="left"  style="border-collapse: collapse;" colspan="5" align="right"></th>
                            <th align="left" class="line-detalle" colspan="2" align="lerightft" ">IMPORTE NETO</th>
                            <th align="left" class="line-detalle" colspan="2" style="text-align:right">@Model.Cab.CH_SUB_TOTAL</th>
                        </tr>
                        <tr>
                            <th align="left" style="border:0" colspan="5" align="lerightft"></th>
                            <th align="left" class="line-detalle" colspan="2" align="right" ">IGV 18%</th>
                            <th align="left" class="line-detalle"  colspan="2" style="text-align:right">@Model.Cab.CH_IGV</th>
                        </tr>
                        <tr>
                            <th align="left" style="border:0" colspan="5" align="right"></th>
                            <th align="left" class="line-detalle" colspan="2" align="right">TOTAL</th>
                            <th align="left" class="line-detalle" colspan="2" style="text-align:right">@Model.Cab.CH_TOTAL</th>
                        </tr>
           

        </table>
        <br />
        @Model.Cab.CH_MONTO_LETRAS
        <table>
            <tr>
                <th> <img src="@Model.Cab.CH_FIRMANTE_01" width="120" height="120" /></th>
