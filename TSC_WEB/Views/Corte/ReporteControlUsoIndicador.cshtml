        // ARMAMOS TABLA GENERAL
        function setTable(data,fecha = null) {

            // LIMPIAMOS VALORES
            VALORESPROGRAMADO = [];
            VALORESTIZADO = [];
            VALORESTENDIDO = [];
            VALORESCORTADO = [];
            VALORPORCENTAJE = [];
            VALORLABELS = [];

            let cont = 0;
            let th = "<tr>";
            let tr = "";
            let tf = "";
            let titulo = "";
            let valor = "";
            let total = 0;
            let totalprogramado = 0;
            let totalcortado    = 0;

            // RECORREMOS
            for (let key in data) {
                cont++;
                total = 0;
                tr += "<tr>";
                // ARMAMOS CABECERA
                for (let key2 in data[key]) {

                    // VALORES
                    titulo = key2.replace(/'/g, "");
                    valor = data[key][key2];
                    valor = valor == null ? 0 : valor;

                    if (!isNaN(valor)) {
                        let suma = parseFloat(valor);
                        total += suma;
                    }

                    // VALOR PROGRAMADO
                    if (cont == 1) {

                        if (titulo != "IDTIPO") {
                            th += `<th nowrap>${titulo}</th>`;
                        }

                        // AGREGAMOS TITULOS
                        if (titulo != "IDTIPO" && titulo != "TIPO") {
                            VALORLABELS.push(titulo);
                        }

                        // AGREGAMOS VALORES PROGRAMADO
                        if (titulo != "IDTIPO" && titulo != "TIPO") {
                            VALORESPROGRAMADO.push(valor);
                        }
                    }

                    // VALOR TIZADO
                    if (cont == 2) {
                        // AGREGAMOS VALORES PROGRAMADO
                        if (titulo != "IDTIPO" && titulo != "TIPO") {
                            VALORESTIZADO.push(valor);
                        }
                    }

                    // VALOR TENDIDO
                    if (cont == 3) {
                        // AGREGAMOS VALORES PROGRAMADO
                        if (titulo != "IDTIPO" && titulo != "TIPO") {
                            VALORESTENDIDO.push(valor);
                        }
                    }

                    // VALOR CORTADO
                    if (cont == 4) {
                        // AGREGAMOS VALORES PROGRAMADO
                        if (titulo != "IDTIPO" && titulo != "TIPO") {
                            VALORESCORTADO.push(valor);
                        }
                    }

                    if (titulo != "IDTIPO") {
                        //th += `<th nowrap>${titulo}</th>`;
                        tr += `<td nowrap>${valor}</td>`;

                    }
                }

                // TOTAL POR FILA
                if (fecha == null) {
                    tr += `<td nowrap>${total}</td>`;

                    // TOTAL PROGRAMADO 
                    if (cont == 1) {
                        totalprogramado = total;
                    }

                    // TOTAL CORTADO 
                    if (cont == 4) {
                        totalcortado = total;
                    }
                }

                tr += "</tr>";


            }

            // CABECERA DEL TOTAL 
            if (fecha == null) {
                th += "<th>TOTAL</th>";
            }

            th += "</tr>";

