                let totalporcentaje = Math.round(((totalcortado / totalprogramado) * 100));
                tf += "<th>" + totalporcentaje + "%</th>";
            }


            $("#theadindicador").html(th);
            $("#tbodyindicador").html(tr);
            $("#tfootindicador").html(tf);

