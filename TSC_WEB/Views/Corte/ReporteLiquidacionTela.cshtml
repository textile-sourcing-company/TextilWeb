                            <td>${obj.totalmermatendidorealpor}</td>
                            <td>${obj.adicional}</td>
                            <td>${obj.motivoadicional}</td>
                            <td>${obj.devolucionprimera}</td>
                            <td>${obj.motivoprimera}</td>
