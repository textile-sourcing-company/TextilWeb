                        <th rowspan="2"></th>
                        <th colspan="@cantidadtallas">UNIDADES POR TALLA - PARTIDA #12373-21</th>
                        <th rowspan="2" class="align-vertical">TOTAL</th>
                    </tr>*@
                <tr class="theadtr">
                    <th></th>
                    @foreach (var item in Model.Tallas)
                    {
                        <th>@item.talla</th>
                    }
