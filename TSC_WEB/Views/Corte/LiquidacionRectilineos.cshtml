                    <td> <input type="text" class="inputtabla" readonly> </td>
                </tr>
                <tr>
                    <th>Cantidad 2da</th>
                    @foreach (var item in Model.Tallas)
                    {
                        <td> <input type="text" class="inputtabla"> </td>
                    }
                    @* TOTALES *@
                    <td> <input type="text" class="inputtabla" readonly> </td>
                </tr>
                <tr>
                    <th>Total Unidades</th>
                    @foreach (var item in Model.Tallas)
                    {
                        <td> <input type="text" class="inputtabla"> </td>
                    }
                    @* TOTALES *@
                    <td> <input type="text" class="inputtabla" readonly> </td>
                </tr>
                <tr>
                    <th>Peso Bruto total</th>
                    @foreach (var item in Model.Tallas)
                    {
                        <td> <input type="text" class="inputtabla"> </td>
                    }
                    @* TOTALES *@
                    <td> <input type="text" class="inputtabla" readonly> </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>