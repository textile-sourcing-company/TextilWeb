    <script type="text/javascript">
        $(document).ready(function () {
            $(".loader").fadeOut("slow");

            $("#menu-icon").click(function () {
                $("#ModulosLi li.nav-item").removeClass("menu-open");
                $("#ModulosLi li.nav-item ul").css("display", "none");
            });

        });



