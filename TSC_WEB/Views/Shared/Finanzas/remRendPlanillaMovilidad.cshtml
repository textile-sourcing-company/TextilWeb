@{
    Layout = null;
}


<div class="row m-2">


    <div class="col-12 p-2 m-1" style="background-color: #F2F4F4; border-radius: 4px">

        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 p-1">
                <label for="rcbxConcepCabModal2">Concepto:</label>
                <select class="form-control form-control-sm" id="rcbxConcepCabModal2"></select>
            </div>

            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 p-1">
                <label for="rcbxConcepDetModal2">Detalle:</label>
                <select class="form-control form-control-sm" id="rcbxConcepDetModal2"></select>
            </div>

            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 p-1">
                <label for="rtxtConsideracionModal2">Consideración:</label>
                <textarea id="rtxtConsideracionModal2" class="form-control form-control-sm" type="text" disabled></textarea>
            </div>

            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 p-1">
                <label for="rtxtObservacionModal2">Observación:</label>
                <input id="rtxtObservacionModal2" class="form-control form-control-sm" type="text">
            </div>

        </div>
    </div>



    <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 p-1">
        <label for="rcbxTipoCpbteCompModal2">Tipo Comprobante:</label>
        <select class="form-control form-control-sm" id="rcbxTipoCpbteCompModal2" disabled></select>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 p-1">
        <label for="rtxtEmpresaModal2">Empresa:</label>
        <input id="rtxtEmpresaModal2" class="form-control form-control-sm" type="text" placeholder="" value="Textile Sourcing Company SAC" disabled>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 p-1">
        <label for="rtxtFechaModal2">Fecha Emisión:</label>
        <input class="form-control form-control-sm cfecha" type="date" id="rtxtFechaModal2" disabled>
    </div>

    <div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 p-1">
        <label for="rcbxPeriodoModal2">Periodo:</label>
        <select class="form-control form-control-sm" id="rcbxPeriodoModal2"></select>
    </div>
    <div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 p-1">
        <label for="rtxtNumPlanillaModal2">N° Planilla:</label>
        <input id="rtxtNumPlanillaModal2" class="form-control form-control-sm" type="text" maxlength="11" disabled>
    </div>
    <div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 p-1">
        <label for="rcbxMonedaModal2">Moneda:</label>
        <select class="form-control form-control-sm" id="rcbxMonedaModal2" disabled></select>
    </div>



    <div class="col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 p-1">
        <label for="rtxtDNIModal2">DNI:</label>
        <input id="rtxtDNIModal2" class="form-control form-control-sm" type="text" placeholder="Buscar por DNI" maxlength="12" disabled>
    </div>
    <div class="col-12 col-sm-8 col-md-4 col-lg-5 col-xl-5 p-1">
        <label for="rtxtApeNomModal2">Apellidos y Nombres:</label>
        <input id="rtxtApeNomModal2" class="form-control form-control-sm" type="text" disabled>
    </div>

    <div class="col-12 col-sm-12 col-md-4 col-lg-5 col-xl-5 p-1">
        <label for="rtxtCeCoModal2">Centro de Costo:</label>
        <input id="rtxtCeCoModal2" class="form-control form-control-sm" type="text" maxlength="200" disabled>
    </div>




    <div class="card container-fluid mt-2" style="background-color: #F2F4F4">
        <div class="row">
            <div class="col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 p-1">
                <label for="rtxtFechaModalDet2">Fecha Traslado:</label>
                <input id="rtxtFechaModalDet2" class="form-control form-control-sm cfecha" type="date">
            </div>
            <div class="col-12 col-sm-8 col-md-4 col-lg-4 col-xl-4 p-1">
                <label for="rtxtOrgDstModal2">Origen / Destino:</label>
                <input id="rtxtOrgDstModal2" class="form-control form-control-sm" type="text" maxlength="120" placeholder="">
            </div>
            <div class="col-12 col-sm-8 col-md-4 col-lg-3 col-xl-3 p-1">
                <label for="rtxtMotivoModal2">Motivo:</label>
                <input id="rtxtMotivoModal2" class="form-control form-control-sm" type="text" maxlength="120" placeholder="">
            </div>
            <div class="col-12 col-sm-4 col-md-4 col-lg-1 col-xl-1 p-1">
                <label for="rtxtImporteModal2">Importe:</label>
                <input id="rtxtImporteModal2" class="form-control form-control-sm" type="number" maxlength="120" placeholder="">
            </div>

            <div class="col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 p-1">
                <label for="rbtnAgregarMotivo2">Agregar:</label>
                <button type="button" style="width: 100%" class="btn btn-primary btn-sm" id="rbtnAgregarMotivo2">Agregar</button>
            </div>

        </div>
    </div>

    <div class="container-fluid">

        <table class="table table-sm table-bordered table-striped dt-responsive table-hover nowrap mt-3" id="rtblPlanillaMovilidad" style="width: 100%">
            <thead class="thead-light">
                <tr>
                    <th class="all"></th>
                    <th>Fecha Traslado</th>
                    <th>Origen / Destino:</th>
                    <th>Motivo</th>
                    <th class="all">Importe</th>
                    <th class="all" style="text-align: center">Eliminar</th>
                </tr>
            </thead>
            <tbody id="rtblPlanillaMovilidadContent"></tbody>
        </table>

    </div>

    <div class="container-fluid">
        <div class="card row mt-2">
            <div class="col-12 d-flex flex-row-reverse p-2 pr-1">
                <h6 id="rrembsumtotal"></h6>
            </div>
        </div>
    </div>


</div>
