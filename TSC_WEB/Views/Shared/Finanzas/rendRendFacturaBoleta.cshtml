@{
    Layout = null;
}


    <div class="row m-2">

        <div class="col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 p-1">
            <label for="zcbxTipoCpbteCompModal1">Tipo Comprobante:</label>
            <select class="form-control form-control-sm" id="zcbxTipoCpbteCompModal1"></select>
        </div>

        @*<div class="col-3 p-1">
            <label for="txtSerieNumCompModal1">N° Comprobante:</label>
            <input id="txtSerieNumCompModal1" class="form-control form-control-sm" type="text" placeholder="N° Comprobante">
        </div>*@

        <div class="col-12 col-sm-4 col-md-4 col-lg-1 col-xl-1 p-1">
            <label for="ztxtSerieModal1">Serie:</label>
            <input id="ztxtSerieModal1" class="form-control form-control-sm" type="text" placeholder="Serie">
        </div>

        <div class="col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 p-1">
            <label for="ztxtNumeroModal1">Número:</label>
            <input id="ztxtNumeroModal1" class="form-control form-control-sm" type="number" placeholder="Número">
        </div>


        <div class="col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 p-1">
            <label for="ztxtFechaModal1">Fecha Emisión:</label>
            <input class="form-control form-control-sm cfecha" type="date" id="ztxtFechaModal1">
        </div>
        <div class="col-12 col-sm-3 col-md-4 col-lg-2 col-xl-2 p-1">
            <label for="zcbxMonedaModal1">Moneda:</label>
            <select class="form-control form-control-sm" id="zcbxMonedaModal1" disabled></select>
        </div>


        <div class="col-12 col-sm-5 col-md-4 col-lg-3 col-xl-3 p-1 card kpi-modal-monto1">
            <label for="zkpiMontoSeleecionadoModal1">Monto por Rendir</label>
            <h6 id="zkpiMontoSeleecionadoModal1">0</h6>
        </div>


        <div class="col-12 col-sm-12 col-md-6 col-lg-2 col-xl-2 p-1">
            <label for="zcbxPeriodoModal1">Periodo Sofya:</label>
            <select class="form-control form-control-sm" id="zcbxPeriodoModal1"></select>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2 p-1">
            <label for="ztxtRucCompModal1">RUC / N° DNI:</label>
            <input id="ztxtRucCompModal1" class="form-control form-control-sm" type="text" maxlength="11" placeholder="Buscar N° RUC <Enter>">
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 p-1">
            <label for="ztxtRSCompModal1">Razon Social:</label>
            <input id="ztxtRSCompModal1" class="form-control form-control-sm" type="text" placeholder="Razon Social" disabled>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2 p-1">
            <label for="ztxtCodSofyaPCModal1">Código Sofya</label>
            <input id="ztxtCodSofyaPCModal1" class="form-control form-control-sm" type="text" placeholder="" disabled>
        </div>


        <div class="col-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 p-1">
            <label for="ztxtObsCompModal1">Glosa:</label>
            <input id="ztxtObsCompModal1" class="form-control form-control-sm" type="text">
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 p-1">
            <label for="ztxtCeCoModal1">Centro de Costo:</label>
            <input id="ztxtCeCoModal1" class="form-control form-control-sm" type="text" disabled>
        </div>


        <div class="col-12 col-sm-12 col-md-12 col-lg-5 col-xl-2 p-1 d-flex flex-column">

            <label for="zswtIGV">CON IGV:</label>
            <input id="zswtIGV" type="checkbox" data-toggle="toggle" data-on="SI" data-off="NO" data-onstyle="primary" data-width="120" data-offstyle="secondary">

        </div>



        






        <div class="card container-fluid mt-2" style="background-color: #F2F4F4">
            <div class="row">

                <div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2 p-1">
                    <label for="zcbxUM1">UM:</label>
                    <select class="form-control form-control-sm" id="zcbxUM1"></select>
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 p-1">
                    <label for="ztxtDescripcion1">Descripción:</label>
                    <input id="ztxtDescripcion1" class="form-control form-control-sm" type="text" maxlength="60" placeholder="">
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-2 col-xl-2 p-1">
                    <label for="ztxtCantidad1">Cantidad:</label>
                    <input id="ztxtCantidad1" class="form-control form-control-sm" type="number">
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-2 col-xl-2 p-1">
                    <label for="ztxtValorUnitarioTotal1">Importe:</label>
                    <input id="ztxtValorUnitarioTotal1" class="form-control form-control-sm" type="number">
                </div>

                <div class="col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 p-1">
                    <label for="zbtnAgregarMotivo1">Agregar:</label>
                    <button type="button" style="width: 100%" class="btn btn-primary btn-sm" id="zbtnAgregarMotivo1">Agregar</button>
                </div>

            </div>
        </div>


        <div class="container-fluid">

            <table class="table table-sm table-bordered table-striped dt-responsive table-hover display nowrap mt-3" id="ztblFacturaBoleta" style="width: 100%">
                <thead class="thead-light">
                    <tr>
                        <th class="all"></th>
                        <th>UM</th>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Precio Unit.</th>
                        <th class="all">Total</th>
                        <th class="all" style="text-align: center">Eliminar</th>
                    </tr>
                </thead>
                <tbody id="ztblFacturaBoletaContent"></tbody>
            </table>

        </div>

        <div class="card p-2 mt-2" style="width: 100%">

            <div class="row">
                <div class="form-group col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 mt-1">
                    <label for="zidimportetotal1">Importe Total: </label>
                    <input class="form-control form-control-sm ml-1" type="number" id="zidimportetotal1" disabled>
                </div>

                <div class="form-group col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 mt-1">
                    <label for="zidigv1">IGV: </label>
                    <input class="form-control form-control-sm ml-1" type="number" id="zidigv1" disabled>
                </div>

                <div class="form-group col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 mt-1">
                    <label for="zidtotal1">Total: </label>
                    <input class="form-control form-control-sm ml-1" type="number" id="zidtotal1" disabled>
                </div>
            </div>

        </div>


    </div>

