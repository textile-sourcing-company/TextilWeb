        <div class="col-12 col-sm-6 col-md-6 col-lg-3 col-xl-3 p-1">
            <label for="txtFechaDesdeModal3">Fecha Desde:</label>
            <input id="txtFechaDesdeModal3" class="form-control form-control-sm cfecha" type="date">
        </div>
        <div class="col-12 col-sm-6 col-md-6 col-lg-3 col-xl-3 p-1">
            <label for="txtFechaHastaModal3">Fecha Hasta:</label>
            <input id="txtFechaHastaModal3" class="form-control form-control-sm cfecha" type="date">
        </div>




