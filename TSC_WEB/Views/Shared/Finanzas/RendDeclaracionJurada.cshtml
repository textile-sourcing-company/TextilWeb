            <label for="txtCeCoModal3">Centro de Costo:</label>
            <input id="txtCeCoModal3" class="form-control form-control-sm" type="text" maxlength="200" disabled>
        </div>


        <div class="col-12 col-sm-6 col-md-6 col-lg-3 col-xl-3 p-1">
            <label for="txtCiudadModal3">Ciudad:</label>
            <input id="txtCiudadModal3" class="form-control form-control-sm" type="text" placeholder="Ingrese el nombre de la Ciudad" maxlength="100">
        </div>
        <div class="col-12 col-sm-6 col-md-6 col-lg-3 col-xl-3 p-1">
            <label for="txtPaisModal3">País:</label>
            <input id="txtPaisModal3" class="form-control form-control-sm" placeholder="Ingrese el nombre del País" type="text">
