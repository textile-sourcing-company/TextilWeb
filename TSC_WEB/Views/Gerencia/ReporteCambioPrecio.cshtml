    @@media only screen and (min-width : 480px) {
    }

    /* Small Devices, Tablets */
    @@media only screen and (min-width : 768px) {
        .card-header .seccion-1 {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            flex-direction: row;
            flex-wrap: wrap;
            width: 50%;
        }


        .card-header .seccion-2 {
            display: flex;
            justify-content: flex-end;
            flex-direction: row;
