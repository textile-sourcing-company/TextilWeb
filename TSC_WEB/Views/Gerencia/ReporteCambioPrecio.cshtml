    @@media only screen and (min-width : 320px) {
        .card-header .seccion-1 {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: row;
            flex-wrap: wrap;
            width: 100%;
        }

            .card-header .seccion-1 .cont-btn-buscar {
                margin-top: 3px;
            }

        .card-header .seccion-2 {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: row;
            flex-wrap: wrap;
            width: 100%;
            border-top: 1px solid #EBEDEF;
            margin-top: 15px;
            padding-top: 8px;
        }
    }

