                            <td colspan="1"> Fecha de emisión: </td>
                            <td colspan="3" style="text-align: left; border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.fechaEmision </td>
                        </tr>

                    </tbody>
                </table>



