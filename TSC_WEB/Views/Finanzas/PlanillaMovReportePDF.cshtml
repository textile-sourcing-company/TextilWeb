                        <tr>
                            <th style="text-align: center; background-color: #D5D8DC; width: 100%" colspan="4"> Datos del Trabajador</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="1"> Apellidos y Nombres: </td>
                            <td colspan="3" style="text-align: left; border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.rs </td>
                        </tr>
                        <tr>
                            <td colspan="1"> DNI </td>
                            <td colspan="3" style="text-align: left; border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.rucDNI </td>
                        </tr>
                        <tr>
                            <td> Centro de costos: </td>
                            <td style="border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.ceco </td>
                            <td> Código de CeCo </td>
                            <td style="border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.codceco </td>
                        </tr>
                        <tr>
                            <td colspan="1"> Cargo </td>
                            <td colspan="3" style="text-align: left; border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.cargo </td>
                        </tr>
                    </tbody>
                </table>



                <table style="width: 100%; margin-top: 10px; border: 1px solid #000000">
                    <thead>
                        <tr>
                            <th style="text-align: center; background-color: #D5D8DC;"> Fecha (dd/mm/aaaa) </th>
                            <th style="text-align: center; background-color: #D5D8DC;"> Motivo </th>
                            <th style="text-align: center; background-color: #D5D8DC;"> Destino </th>
                            <th style="text-align: center; background-color: #D5D8DC;"> Importe S/ </th>
                        </tr>
                    </thead>
                    <tbody style="border: 1px solid #000000; margin: 0; padding: 0;">
                        @foreach (var item in Model.planillaMovilidadDet)
                        {
                            <tr>
                                <td style="text-align: left;"> @item.fecha </td>
                                <td style="text-align: left;"> @item.detalle2 </td>
                                <td style="text-align: left;"> @item.detalle1 </td>
                                <td style="text-align: right;">  @Math.Round(item.valorunit, 2) </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr style="border: 1px solid #000000; margin: 0; padding: 0;">
                            <td></td>
                            <td></td>
                            <td style="font-size: 16px; font-weight: bold; text-align: right;">TOTAL</td>
                            <td style="font-size: 16px; font-weight: bold; text-align: right;">@Model.planillaMovilidadCab.totalCmpbnte</td>
                        </tr>
                    </tfoot>
                </table>


                <div style="width: 100%; margin-top: 15px; margin-bottom: 10px; display: block;">

                    <div class="item-firma1" style="display: inline-block; width: 49%; margin: auto; text-align: center;">
                        <table style="width: 100%; margin-top: 10px; margin-bottom: 10px;">
                            <thead style="border: 0;">
                                <tr style="border: 0;">
                                    <th style="border: 0;">
                                        <div class="firma-formato-liq">
                                            <img src="@Model.planillaMovilidadCab.firma_usuario" alt="firma usuario" width="150" height="110" />
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="text-align: center;">
                                    <td style="border-top: 1px solid #000000; text-align: center;"> Firma del Trabajador </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="item-firma2" style="display: inline-block; width: 49%; margin: auto; text-align: center">
                        <table style="width: 100%; margin-top: 10px; margin-bottom: 10px;">
