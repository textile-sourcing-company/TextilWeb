    <div class="container-fluid">

        <div class="card">

            <div class="primerDIV" style="border: 1px solid #000000; padding: 8px">

                <div class="col-xs-12">
                    <img src="~/Public/logooriginal.png" alt="Logo" height="50" />
                </div>


                <table style="width: 100%">
                    <thead>
                        <tr>
                            <th style="text-align: center; background-color: #D5D8DC; width: 100%" colspan="4">Planilla de Gastos de Movilidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="1"> Empresa: </td>
                            <td colspan="3" style="text-align: left; border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.nombreEmpresa </td>
                        </tr>
                        <tr>
                            <td colspan="1"> RUC: </td>
                            <td colspan="3" style="text-align: left; border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.rucEmpresa </td>
                        </tr>
                        <tr>
                            <td colspan="1"> Planilla N°: </td>
                            <td colspan="3" style="text-align: left; border-bottom: 1px solid #000000"> @Model.planillaMovilidadCab.serieNumero </td>
                        </tr>
                        <tr>
                            <td colspan="1"> Periodo: </td>
